{
  "name": "Dissonance",
  "version": "0.0.1",
  "description": "Yet another Discord interface for JavaScript",
  "license": "MIT",
  "engines": {
    "node": ">=19.0.0"
  },
  "scripts": {
    "build:dev": "node scripts/build.mjs",
    "check": "tsc --noEmit",
    "prettier:check": "prettier ./src --check",
    "eslint:check": "eslint ./src",
    "prettier:fix": "prettier ./src --write",
    "eslint:fix": "eslint ./src --fix",
    "lint": "pnpm run prettier:check && pnpm run eslint:check && pnpm run check",
    "lint:fix": "pnpm run prettier:fix && pnpm run eslint:fix"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "discord-api-types": "^0.37.43",
    "erlpack": "^0.1.4",
    "esbuild": "^0.17.19",
    "esbuild-node-externals": "^1.7.0",
    "eslint": "^8.41.0",
    "eslint-config-dmitmel": "github:dmitmel/eslint-config-dmitmel",
    "eslint-plugin-node": "^11.1.0",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "zlib-sync": "^0.1.8"
  }
}
